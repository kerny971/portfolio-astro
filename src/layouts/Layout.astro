---
export interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description">
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<slot />
	</body>
</html>
<style is:global>

	@import url('https://fonts.googleapis.com/css2?family=Inter:wght@200;400;500;600&display=swap');

	:root {
		--accent: 124, 58, 237;
		--accent-gradient: linear-gradient(45deg, rgb(var(--accent)), #da62c4 30%, white 60%);
	}

	/* Reset CSS default Rules */
	p{
		margin: 0;
		padding: 0;
	}
	ul {
		margin: 0;
		padding: 0;
		list-style-type: none;
	}
	li{
		display: inline-block;
	}
	a {
		color: inherit;
		text-decoration: none;
	}


	/* CSS Layout style */
	html {
		font-family: Inter, sans-serif;
		background-color: #F6F6F6;
		height: 100%;
	}
	body {
		height: 100%;
		padding: 0;
		margin: 0;
	}
	main {
		height: 100%;
		padding: 0 !important;
		max-width: initial !important;
	}
	code {
		font-family: Menlo, Monaco, Lucida Console, Liberation Mono, DejaVu Sans Mono,
			Bitstream Vera Sans Mono, Courier New, monospace;
	}

	.me {
		max-height: auto;
		height: 70%;
		position: relative;
		color: #FFF;
	}

	.background-me {
		position: absolute;
		top: 0;
		left: 0;
		width: 100%;
		height: 100%;
		object-fit: cover;
		z-index: -1;
	}

	.me-1 {
		background-color: rgba(0,0,0,.5);
		background: 
			linear-gradient(0deg, rgba(0,0,0,1) 0%, rgba(1,1,6,1) 10%, transparent 100%),
			linear-gradient(180deg, rgba(0,0,0,.7) 0%, transparent 40%);;
		position: relative;
		height: 100%;
	}

	.me-1 > header {
		max-width: 600px;
		margin: 0 auto;
	}
	.me-1 > header > nav > ul {
		display: flex;
		justify-content: space-between;
	}
	.me-1 > header > nav > ul > li > a {
		display: inline-block;
		padding: 1em;
		margin: 1em;
		border: 1px solid rgba(255, 255, 255, .05);
		border-radius: .2em;
		text-transform: uppercase;
		box-shadow: 0px 8px 15px rgba(0, 0, 0, 0.1);
		font-weight: 500;
		font-size: .6em;
	}
	.me-1 > header > nav > ul > li > a:hover {
		opacity: .7;
	}

	.me-1 > div {
		position: absolute;
		width: 100%;
		bottom: 1em;
	}

	.me-1 > div > div {
		max-width: 600px;
		margin: 0 auto;
		padding: 1em;
		display: grid;
		grid-template-columns: 2fr 4fr;
		grid-template-rows: auto;
	}

	.me-1 > div > div > h1 {
		font-size: 1.3em;
		margin: 0.5em;
		font-weight: 600;
		align-self: center;
	}
	.me-1 > div > div > h1 > small {
		display: block;
		font-weight: 400;
	}
	.me-1 > div > div > p {
		font-weight: 300;
		padding: 1em;
		grid-column: 1 / 4;
		text-align: center;
	}

	.me-1 > div > div > .img-dev {
		width: 80px;
		height: 80px;
		object-fit: cover;
		border-radius: 50%;
		box-shadow: 0px 8px 15px rgba(0, 0, 0, 0.1);
		justify-self: right;
	}

	.projects {
		padding: 1em;
		margin: 0 auto;
		max-width: 600px;
	}
	.projects > .row {
		display: flex;
		flex-wrap: wrap;
	}
	.projects > .row > div {
		flex: 1 0 100%;
		margin: 1em 0;
	}
	.projects > .row > .languages > .row-languages {
		display: grid;
		grid-template-columns: repeat(4, 1fr);
		grid-column-gap: 15px;
		grid-row-gap: 15px;
		grid-template-rows: minmax();
	}
	.projects > .row > .languages > .row-languages > .col {
		text-align: center;
		height: 6em;
		font-size: .7em;
		border-radius: .2em;
		overflow: hidden;
		position: relative;
	}
	.projects > .row > .languages > .row-languages > .col > img {
		width: 100%;
		height: 100%;
		object-fit: contain;
		top: 0;
		left: 0;
		position: absolute;
		z-index: -1;
	}

	.projects > .row > .projects-list > .row-projects {
		display: grid;
		grid-template-columns: 1fr;
		grid-column-gap: 15px;
		grid-row-gap: 15px;
		grid-template-rows: minmax();
	}
	.projects > .row > .projects-list > .row-projects > .col {
		text-align: center;
		height: 6em;
		font-size: .9em;
		font-weight: 500;
		text-transform: uppercase;
		border-radius: .2em;
		overflow: hidden;
		padding: 0 1em;
		display: flex;
		align-items: center;
		gap: 1em;
	}
	.projects > .row > .projects-list > .row-projects > .col > img {
		width: 5em;
		height: 5em;
		object-fit: cover;
		border-radius: 50%;
	}



	.contact {
		background: #E3E3E3;
	}
	.contact > div{
		padding: 1em;
		margin: 0 auto;
		max-width: 600px;
	}

	@media screen and (min-width: 500px) {

		.me {
			height: 60%;
		}

		.me-1 > div > div {
			grid-row: 2fr;
		}
		.me-1 > div > div > .img-dev {
			margin: 0 1.3em;
			height: 8em;
			width: 8em;
			grid-row: 1 / span 2;
		}
		.me-1 > div > div > p {
			grid-column: 2 / 4;
			text-align: left;
			padding: .5em;
		}
	}

	@media screen and (min-width: 1000px) {
		.projects {
			max-width: 1200px;
		}

		.projects > .row {
			gap: 10%;
		}

		.projects > .row > div:first-child {
			flex: 1 0 70%;
		}

		.projects > .row > div:last-child {
			flex: 1 0 20%;
		}

		.projects > .row > .languages > .row-languages {
			grid-template-columns: repeat(6, 1fr);
		}

	}


</style>
